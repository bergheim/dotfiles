#!/usr/bin/env sh
#
# wm independent hotkeys
#
#

# show keybindings
super + shift + 1
  sxhkd-show-bindings

# kill an application
super + shift + d
  exec xkill

# terminal emulator
super + Return
  alacritty

# alternate terminal emulator
super + shift + Return
  emacsclient -nc

# file manager
super + alt + Return
  alacritty -e vifmrun

# edit whatever in emacs
super + shift + e
  emacs-anywhere

# calculator
super + shift + q
  qalculate-gtk

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

# screenshot
super + shift + @p
  screenshot && notify-send -u low 'Screenshot captured'

# screenshot area
super + alt + shift + @p
  screenshot -a && notify-send -u low 'Screenshot area captured'

# FIXME these are terrible
# lock screen
super + shift + x
  exec fancylocki3

# toggle autolock
super + alt + shift + x
  exec desktop-locker toggle

# run rofi
super + r
  rofi -show run -lines 10 -display-run "run: "

super + shift + r
  rofi -show combi -display-combi "combi: "

alt + Tab
  rofi -show window -display-window "Switch to window: "

super + space
  rofi-pass
  # gopass ls --flat | rofi -dmenu | xargs --no-run-if-empty -- bash -c 'gopass show -f $0 Username' | head -n 1 | xdotool type --clearmodifiers --file -
  # gopass ls --flat | dmenu | xargs --no-run-if-empty gopass show -o | xdotool type --clearmodifiers --file -

super + v
  CM_LAUNCHER=rofi clipmenu

alt + {comma, period, slash}
  playerctl {previous, next, play-pause}

{XF86AudioPrev, XF86AudioNext, XF86AudioPlay}
  playerctl {previous, next, play-pause}

XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

super + shift + {comma, period}
  pactl set-sink-volume @DEFAULT_SINK@ {-5%, +5%}

{XF86AudioLowerVolume, XF86AudioRaiseVolume}
  pactl set-sink-volume @DEFAULT_SINK@ {-5%, +5%}

super + semicolon
  ~/.emacs.d/bin/org-capture

shift + F12
  alacritty-colorscheme -T

F12
  desktop-toggle-color
