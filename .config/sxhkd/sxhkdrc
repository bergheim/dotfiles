#!/usr/bin/env sh
#
# wm independent hotkeys
#
#

# show keybindings
super + shift + r
  sxhkd-show-bindings

# kill an application
super + shift + BackSpace
  exec xkill

# terminal emulator
super + Return
  ldpi alacritty

# alternate terminal emulator
super + shift + Return
  emacsclient -nc

# vifm file manager
super + alt + Return
  alacritty -e vifmrun

# dolphin
super + d
  dolphin

# edit whatever in emacs
super + shift + e
  emacs-anywhere

# make sxhkd reload its configuration files:
super + F6
  pkill -USR1 -x sxhkd

# screenshot
super + @F1
  screenshot && notify-send -u low 'Screenshot captured'

# screenshot area
super + @F2
  screenshot -a && notify-send -u low 'Screenshot area captured'

# lock screen
super + F12
  exec fancylocki3

# toggle autolock
super + shift + F12
  exec desktop-locker toggle

# run command
super + r
  rofi -show combi -combi-modi "drun,run" -modi "combi,calc,emoji,unifont:rofimoji,Power Menu:rofi-power-menu"

# switch window
alt + Tab
  rofi -show window -display-window "Switch to window: "

# enter password
super + p
  rofi-pass

# clipboard manager
super + v
  CM_LAUNCHER=rofi clipmenu

{XF86AudioPrev, XF86AudioNext, XF86AudioPlay}
  playerctl {previous, next, play-pause}

# toggle audio mute
XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

{XF86AudioLowerVolume, XF86AudioRaiseVolume}
  pactl set-sink-volume @DEFAULT_SINK@ {-5%, +5%}

# org-capture
super + semicolon
  ~/.emacs.d/bin/org-capture

# toggle alacitty dark/white
super + shift + F10
  notify-send "Toggling alacritty colors" --icon=utilities-terminal --category=os && alacritty-colorscheme toggle "gruvbox_light.yaml" "nord.yaml"

# toggle desktop dark/white
super + F10
  desktop-toggle-color

# toggle redshift
super + F11
  notify-send "Toggling redshift" --icon=preferences-desktop-screensaver --category=os && pkill -USR1 '^redshift$'

# close notification
ctrl + alt + grave
  dunstctl close

# restore notification
ctrl + alt + Tab
  dunstctl history-pop

# super + ctrl + grave
  # dunstctl close-all

# act on notificatoin
super + alt + grave
  dunstctl context
