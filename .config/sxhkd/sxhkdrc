#
# wm independent hotkeys
#

# terminal emulator
super + Return
  alacritty

super + shift + Return
  termite

# program launcher
super + @space
  dmenu_run

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

super + shift + @p
  screenshot && notify-send -u low 'Screenshot captured'

super + alt + shift + @p
  screenshot -a && notify-send -u low 'Screenshot area captured'

super + shift + x
  exec fancylocki3

super + r
  rofi -show run -lines 10 -display-run "run: "

super + shift + r
  rofi -show combi -display-combi "combi: "

alt + Tab
  rofi -show window -display-window "Switch to window: "

super + c
  CM_LAUNCHER=rofi clipmenu

super + {comma, period, slash}
  playerctl {previous, next, play-pause}

super + shift + {comma, period}
  pactl set-sink-volume 0 {-5%, +5%}
